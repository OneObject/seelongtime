html, body {
    font-family: "microsoft yahei"
}

.bg {
    background-image: url('../img/bgwg.jpg');
}

.container {
    width: 1024px;
    overflow: hidden;
    display: block;
}

.header {
    width: 100%;
    height: 100px;
    background-image: url('../img/flat_top2.png');
    display: block;
    overflow: hidden
}

.footer {
    border: 1px solid #adadad;
    border-top: none;
    background-color: #ffffff;
    border-bottom-left-radius: 15px;
    border-bottom-right-radius: 15px;
    text-align: center;
    padding-bottom: 5px;
    color: #aaa;
    display: block;
    overflow: hidden;
}

#body {
    border: 1px solid #adadad;
    border-bottom: none;
    background-color: #ffffff;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    height: 15px;
    display: block;
    overflow: hidden;
    padding: 20px;
    overflow-y:scroll; 
}

.bulletin {
    height: 50px;
    float: right;
    margin-right: 53px;
    margin-top: 35px;
    color: #B01313;
    font-size: 24px;
}

.erweima {
    width: 250px;
    height: 250px;
    position: absolute;
    z-index: 100;
    top: 90px;
    right: 240px;
    border: 5px solid #adadad;
    padding: 10px;
    background-color: #f0f0f0;
    display: none;
}

.msg_list {
    width: 100%;
}

.item_left {
    width: 50px;
    text-align: center;
    float: left;
}

.item_right {
    float: left;
    margin-left: 20px;
    font-family: "microsoft yahei";
    font-size: 32px;
    background-color: #47a447;
    padding: 5px 10px;
    border-radius: 10px;
    min-height: 50px;
    max-width: 820px;
}

.msg_item {
    padding: 10px;
    color: #fff;
    display: block;
    overflow: hidden;
    border-radius: 15px;
    clear: both;
    overflow: hidden;
    margin-bottom: 5px;
    width: auto;
}

.item_head {
    width: 50px;
    height: 50px;
    text-align: center;
}

.item_head span:first-child {
    width: 100%;
    text-align: center;
    display: block;
    overflow: hidden;
}
.msg_item table{float: left;max-width: 800px;}
.msg_item .time {
    font-size: 16px;
    color: #adadad;
    display: block;
    width: 100%;
    text-align: right
}
.qipao{width: 20px;height:50px;float: left;margin-left: -20px;}
.uname{color: #000000;}