	<!-- 用户访问足迹 -->
	<filter>  
	    <filter-name>userTrackFilter</filter-name>  
	    <filter-class>com.longtime.common.filter.UserTrackFilter</filter-class>
	    <init-param>
	    	<param-name>isTrack</param-name>
	    	<param-value>true</param-value>
	    </init-param>  
	</filter>  
	  
	<filter-mapping>  
	    <filter-name>userTrackFilter</filter-name>  
	    <url-pattern>*.xhtml</url-pattern>    
	</filter-mapping>
	
	
	
