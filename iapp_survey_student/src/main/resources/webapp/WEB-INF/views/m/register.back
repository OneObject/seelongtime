<%@ page contentType="text/html;charset=UTF-8"%>
<%@ include file="/WEB-INF/include/taglibs_m.jsp"%>
<!DOCTYPE html>
<html>
<head>
<title>用户注册</title>
<link rel="stylesheet" href="${basepath}/static/m/new.css">
<style type="text/css">
        html,body{
            background-color: #3d4450;
        }
</style>
</head>
<body>
    <div class="login">
        <div class="login-box">
            <header>
               	 用户注册
            </header>
            <section class="input-box">
          <c:if test="${not empty registerForm and registerForm.code =='success'}">
              <div class="input-group" id="error">
                    <div class="alert alert-success">
	                    	注册成功
                    </div>
                </div>
            <div class="input-group" onclick="location.href='${basepath}/m/index.xhtml'">
                    <span class="bind">去绑定</span>
            </div>
          </c:if>
          <c:if test="${ empty registerForm or registerForm.code !='success'}">      
            <form action="${basepath}/m/register.xhtml" method="post" id="regForm">
            	
            
            
           		 <div class="input-group">
                    <input name="name" class="form-control" placeholder="姓名" id="name" value="${registerForm.name}">
                    <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </span>
                </div>
                <div class="input-group">
                    <input name="org" class="form-control" placeholder="单位" id="org"  value="${registerForm.org}">
                    <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </span>
                </div>
                <div class="input-group">
                    <input name="mobile" class="form-control" placeholder="手机号" id="username"  value="${registerForm.mobile}">
                    <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </span>
                </div>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" placeholder="密码" id="password">
                    <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
                
                <c:if test="${not empty registerForm and registerForm.code !='success'}">
                <div class="input-group" id="error">
                    <div class="alert alert-danger">
	                    <c:choose>
	                	<c:when test="${registerForm.code=='empty'}">请完整输入注册信息</c:when>
	                	<c:when test="${registerForm.code=='exist'}">手机号已经被使用</c:when>
	                	<c:when test="${registerForm.code=='fail'}">注册失败</c:when>
	                	</c:choose>
                    </div>
                </div>
                </c:if>
                <div class="input-group" onclick="submit()">
                    <span class="bind">注册</span>
                </div>
                &nbsp;
                <input type="text"  value="${param.domain}"  name="domain" id="domain"/>
                <input type="text"  value="${param.openid}"  name="openid" id="openid"/>
                
<%--临时添加 for 新奥   新注册用户默认禁用状态 --%>                
<c:if test="${param.domain eq 'ENN'}">
    <input type="hidden"  value="true"  name="disable"/>            
</c:if>
                
             </form>
              </c:if>
              &nbsp;
            </section>
        </div>
    </div>
    <script type="text/javascript">
        function submit(){
        	$("#error").hide();
            if($("#username").val() == "" ||$("#password").val() == "" || $("#name").val()==""){
                //$("#error").show();
                alert("请完整输入注册信息");
            }else{
                /*提交操作*/
                $("#regForm").submit();
            }
        }
    </script>
</body>
</html>