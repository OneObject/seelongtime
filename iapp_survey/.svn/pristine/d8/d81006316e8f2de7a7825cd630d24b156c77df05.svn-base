/* Swipe 2 required styles */
.swipe {
    overflow: hidden;
    visibility: hidden;
    position: relative;
}
.swipe-wrap {
    overflow: hidden;
    position: relative;
}
.swipe-wrap > div {
    float:left;
    width:100%;
    position: relative;
}
nav #position{
    position: absolute;
    z-index: 10;
    margin-top: -20px;
    margin-left: 40%;;
}
#position li{
    float: left;
    width: 10px;
    height: 10px;
    background-color: #ffffff;
    /*border: 1px inset #ffffff;*/
    border-radius: 50%;
    margin-left: 5px;
}
#position .on{background-color: #D9534F}
/* END required styles */
/*列表样式*/
.list{
    clear: both;
    width: 100%;
    height: auto;
}
.list ul{
    margin: 0px;
    padding: 0px;
}
.list ul li{
    margin: 0px;
    padding: 5px;
    list-style: none;
    height:100px;
    width: 100%;
    display: block;
    overflow: hidden;
    background-color: #F5F5F5;
}
.list ul li table{
    width: 100%;
}
.list ul li table .img{
    width: 142px;
    height: 100px;
}
.sm-img{height: 80px;}
.course-name{
    font-family: "microsoft yahei";
    font-size: 16px;
    color: #000000;
    padding: 3px 10px;
}
.course-jianjie{
    padding: 0px 10px;
    font-size: 14px;
    color: #595757;
}
.course-info{
    padding: 0px 10px;
    font-size: 14px;
    color: #595757;
}
.course-info .time{
    float: left;
}
.course-info .pinlun{
    float: right;
}
/**********************************************************************************************************************/
/*分类*/
.classify{
    padding: 50px 0px;
    width: 100%;
    height: auto;
    overflow-y: scroll;
    overflow-x: hidden;
}
.classify li{
    list-style: none;
    padding: 10px;
    height: 80px;
    font-size: 20px;
    border: 1px solid #f2dede;
    width: 100%;
    overflow: hidden;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
}
.classify li table{
    width: 100%;
    overflow:hidden;
}
.right-arrows{font-size: 24px;
color:#595757 ;
width: 50px;}
.course-leimu{
    padding: 0px 10px;
    font-size: 12px;
    color: #d9534f;
}
/*--------------------------------------------------------------------------------------------------------------------*/
.tags{
    padding-top: 44px;
    width: 100%;
    overflow: hidden;
    display: block;
}
.class-box{
    /*padding-left: 10px;*/
    padding-top: 20px;
    width: 100px;
    background-color: #595757;
    height: 100%;
    display: block;
    float: left;
    overflow: hidden;
    position: fixed;
}
.class-box ul{
    padding: 0px;
    margin: 0px;
}
.class-box ul li{
    height: 50px;
    line-height: 50px;
    list-style: none;
    padding-left: 10px;
    cursor: pointer;
}
.class-box ul .active{
    background-image: url("../img/tagbg.png");
    background-size: 100px 50px;
    color: #d9534f;
}
.tags-box{padding-left: 100px;}
.tag-block{
    display: block;
    padding:7px 13px;
    text-align: center;
    overflow: hidden;float: left;
    margin-left: 10px;
    margin-top: 10px;
    border-radius: 10px;
}
/*颜色*/
.tag-red{
    background-color: #d9534f;
}
.tag-blue{
    background-color: #0088cc;
}
.tag-green{
    background-color: #5cb85c;
}
.tag-gray{
    background-color: #adadad;
}