    <!-- jedis配置 -->
    <bean id="jedisService" class="com.longtime.app.cache.service.impl.JedisServiceImpl">
        <property name="jedisPool">
            <bean class="redis.clients.jedis.JedisPool" destroy-method="destroy">
             	<constructor-arg name="poolConfig" ref="jedisPoolConfig" />  
                <constructor-arg name="host" value="${redis.host}"/>
                <constructor-arg name="port" value="${redis.port}"/>
                <constructor-arg name="timeout" value="3000"/><!-- 3s -->
            </bean>
        </property>
    </bean>
    
    <!-- POOL配置 -->  
	<bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">  
	    <property name="maxActive"  value="16" /> 
	    <property name="minIdle" value="4" />  
	    <property name="maxIdle" value="4" />  
	    <property name="maxWait" value="1000" />  
	    <property name="testOnBorrow"  value="true"/> 
	    <property name="testWhileIdle" value="true" />
	</bean> 
	
	
	
	
	 <!-- ehcache -->
    <bean id="lt.cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation" value="classpath:ehcache.xml" />
        <property name="shared" value="true" />
    </bean>
    <bean id="lt.ehCacheService" class="com.myctu.platform.gateway.agent.cache.ehcache.EhCacheServiceFactoryBean">
        <!-- 与ehcache.xml中的cache name相匹配-->
        <property name="cacheName" value="lt.local.cache" />
        <property name="cacheManager" ref="lt.cacheManager" />
    </bean>
    
    <bean id="lt.redisClient" class="com.longtime.common.redis.RedisClientFactoryBean">
        <property name="name" value="lt.redis" />
        <property name="addresses" value="${redis.host}:${redis.port}" />
        <property name="dbindex" value="0" />
    </bean>

    <bean id="lt.redisCacheService" class="com.myctu.platform.gateway.agent.cache.redis.RedisCacheServiceFactoryBean">
        <property name="redisClient" ref="lt.redisClient" />
    </bean>
    <!-- facade -->
    <bean id="lt.cacheService" class="com.telecom.ctu.platform.common.cache.DelegateCacheService">
        <!--本地内存cache，由存储标示决定是否调用-->
        <property name="localCacheService" ref="lt.ehCacheService" />
        <!--远程Redis cache，由存储标示决定是否调用-->
        <property name="remoteCacheService" ref="lt.redisCacheService" />
        <!--是否启用本地内存cache标示-->
        <property name="useLocal" value="${lt.cache.useLocal}" />
        <!--是否启用远程Redis cache标示-->
        <property name="useRemote" value="${lt.cache.useRemote}" />
    </bean>
	
    <!-- 发布服务 -->
    <bean id="pubService" class="com.longtime.common.pubsub.redis.RedisPubService">
        <!-- 服务名称 -->
        <property name="name" value="lt.pubService" />
        <!-- redis客户端 -->
        <property name="redisClient" ref="lt.redisClient" />
    </bean>
    
    
  
</beans>
