body,html{margin: 0px;padding: 0px;font-family: "microsoft yahei";width: 100%;height: 100%;}
.__page__ {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #FFF;
    display: none;
}
.pages {
    position: relative;
    width: 100%;
    height: 100%;
    overflow-x:hidden;
}
