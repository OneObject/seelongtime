		<url-pattern>*.list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>spring-mvc-jsp</servlet-name>
		<url-pattern>*.dlg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>spring-mvc-jsp</servlet-name>
		<url-pattern>*.json</url-pattern>
	</servlet-mapping>
