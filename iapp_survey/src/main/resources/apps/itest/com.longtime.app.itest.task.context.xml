	<!-- 定时查询，生成试卷-->
	<bean id="job_create_test_paper"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="createTestPaperTask" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="false"/> <!-- 串行 -->
	</bean>
	<bean id="task_create_test_paper" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="job_create_test_paper" />
		<property name="startDelay" value="10000" />
		<property name="repeatInterval" value="60000" /> <!-- 延迟10秒启动，然后每隔1分钟执行一次。 -->
	</bean>
	
