	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/error/500.jsp</location>
	</error-page>
	<error-page>
		<exception-type>com.longtime.common.exception.IAppRuntimeException</exception-type>
		<location>/WEB-INF/jsp/error/500.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/error/500.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error/404.jsp</location>
	</error-page>

	<jsp-config>
		<taglib id="taglib-elfunctions">
			<taglib-uri>http://www.longtimeit.com/taglib-elfunctions</taglib-uri>
			<!-- tld文件的路径 -->
			<taglib-location>/WEB-INF/tld/functions.taglib.xml</taglib-location>
		</taglib>
		<taglib id="taglib-longtimetag">
			<taglib-uri>http://www.longtimeit.com/iapp</taglib-uri>
			<taglib-location>/WEB-INF/tld/longtimeTag.tld</taglib-location>
		</taglib>
		<taglib id="taglib-acl">
		    <taglib-uri>http://www.longtimeit.com/taglib-acl</taglib-uri> 
			<taglib-location>/WEB-INF/tld/acl.taglib.xml</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.longtimeit.com/taglib-elfunctions-ajy</taglib-uri>
			<!-- tld文件的路径 -->
			<taglib-location>/WEB-INF/tld/ajy.functions.taglib.xml</taglib-location>
		</taglib>

	</jsp-config>


</web-app>
